<h1 class="title is-2">Elenco dei libri</h1>
<%= link_to 'Aggiungi nuovo libro', new_libro_path, class: 'button is-primary' %>
<br />
<br />
<div class="is-horizontal">

<form action="/" method="get">
<div class="field has-addons">
  <div class="control">
     <input class="input" placeholder="Titolo o autore" name="cerca" id="cerca-libro-field"/>
  </div>
  <div class="control">
    <input type="submit" class="button is-info" label="Cerca" onclick="empty()"/>
  </div>
</div>

<script>
function empty() {
    var x;
    x = document.getElementById("cerca-libro-field").value;
    if (x == "") {
        alert("Inserisci un titolo o un autore prima di cercare.");
        return false;
    };
}
</script>

<b>Filtri per la ricerca</b>
<div class="level level-left">
<label for="select-generi" class="label">Genere</label>
<br />
<br />
<div class="select" id="select-generi">
<select name="genere">
  <option>Storico</option>
  <option>fantascienza</option>
  <option>fantasy</option>
  <option>avventura</option>
  <option>horror</option>
  <option>azione</option>
  <option>thriller</option>
  <option>giallo</option>
  <option>rosa</option>
  <option>umoristico</option>
  <option>fiaba</option>
  <option>biografia</option>
  <option>diario</option>
  <option>divulgativo-argomentativo</option>
  <option>poesia</option>
</select>
</div>
<br />
<label for="select-pagine" class="label">Pagine</label>
<br />
<div class="select" id="select-pagine">
<select name="pagine">
  <option>0-100</option>
  <option>100-200</option>
  <option>200-300</option>
  <option>300+</option>
</select>
</div>
</div>
</form>
<!-- FINE FORM DI RICERCA -->

<% if @libro.nil? %>
<h1 class="title is-2 has-text-centered">La ricerca non ha trovato nessun libro</h1>
<% else %>
<table class="table">
  <thead>
    <tr>
      <th>Foto</th>
      <th>Titolo</th>
      <th>Autore</th>
      <th>Richiedi</th>
    </th>
  </thead>
  <tbody>
    <% @libro.each do |libro| %>
      <tr>
        <% if libro.immagine.attached? %>
          <td><%= image_tag libro.immagine.variant(resize: '200') %></td>
        <% else %>
          <td></td>
        <% end %>
        <td><%= link_to libro.titolo, libro %></td>
        <td><%= libro.autore %></td>
        <td><%= link_to 'Richiedi in prestito', richiedi_path(:id => libro.id), class: 'button is-primary is-medium' %> <%= link_to 'Scheda del libro', libro, class: 'button is-info is-small'%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
