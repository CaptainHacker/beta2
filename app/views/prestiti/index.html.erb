<% if utente_corrente.admin? %>
  <% @utenti.each do |utente| %>
  <% @prestitiscaduti = Prestito.where(stato: 1, utente: utente)%>
  <% if @prestitiscaduti.any? %>
  <h1 class="title is-2">Prestiti scaduti</h1>
  <h1 class="subtitle is-4">Prestiti scaduti di <%= utente.cognome %> </h1>
  <table class="table">
    <thead>
      <th>Titolo del libro</th>
      <th>Richiedente</th>
      <th>Proprietario</th>
      <th>Consegna</th>
    </thead>
    <tbody>
      <% @prestitiscaduti.each do |prestito| %>
      <% if prestito.scadenza <= DateTime.now %>
          <tr>
            <td><%= link_to prestito.libro.titolo, prestito.libro %></td>
            <td><%= prestito.utente.cognome %></td>
            <td><%= prestito.libro.utente.cognome %></td>
            <td><%= link_to 'Consegna prestito', consegna_path(:id => prestito.id), class: 'button is-warning is-medium'%></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <% end %>
  <% end %>

